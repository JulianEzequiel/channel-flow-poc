<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="3.5">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="4dp"
            android:layout_weight="1"
            android:background="@drawable/square_border"
            android:orientation="vertical"
            android:padding="8dp">

            <TextView
                android:id="@+id/textView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="4dp"
                android:text="RENDEZVOUS"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/rendezvousValues"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:padding="8dp"
                android:text="(...)"
                android:textSize="32sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/receiveRendezvous"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Receive" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="4dp"
            android:layout_weight="1"
            android:background="@drawable/square_border"
            android:orientation="vertical"
            android:padding="8dp">

            <TextView
                android:id="@+id/textView2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="4dp"
                android:text="UNLIMITED"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/unlimitedValues"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:padding="8dp"
                android:text="(...)"
                android:textSize="32sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/receiveUnlimited"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Receive" />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="4dp"
            android:layout_weight="1"
            android:background="@drawable/square_border"
            android:orientation="vertical"
            android:padding="8dp">

            <TextView
                android:id="@+id/textView3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="4dp"
                android:text="CONFLATED"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/conflatedValues"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:padding="8dp"
                android:text="(...)"
                android:textSize="32sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/receiveConflated"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Receive" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="4dp"
            android:layout_weight="1"
            android:background="@drawable/square_border"
            android:orientation="vertical"
            android:padding="8dp">

            <TextView
                android:id="@+id/textView4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="4dp"
                android:text="BUFFERED"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/bufferedValues"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:padding="8dp"
                android:text="(...)"
                android:textSize="32sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/receiveBuffered"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Receive" />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:weightSum="1">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="4dp"
            android:layout_weight="0.5"
            android:background="@drawable/square_border"
            android:orientation="vertical"
            android:padding="8dp">

            <TextView
                android:id="@+id/textView5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="4dp"
                android:text="OTHER (capacity = 2)"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/otherValues"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:padding="8dp"
                android:text="(...)"
                android:textSize="32sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/receiveOther"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Receive" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="4dp"
            android:layout_weight="0.5"
            android:background="@drawable/square_border"
            android:orientation="vertical"
            android:padding="8dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="4dp"
                android:text="Normal Emissions\n(asFlow().asLiveData())"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/normalEmissionValues"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:padding="8dp"
                android:text="(...)"
                android:textSize="32sp"
                android:textStyle="bold" />
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.5"
        android:orientation="horizontal">

        <Button
            android:id="@+id/initChannels"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Init Emissions"/>

    </LinearLayout>
</LinearLayout>